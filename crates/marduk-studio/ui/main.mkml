// Root UI layout for Marduk Studio.
// Imports reusable components from sibling files.
use "titlebar.mkml" as Titlebar;
use "toolbar.mkml" as Toolbar;

Column [] {
    // Window titlebar.
    Container [bg=#1f1f1fff, padding=0] {
        Titlebar
    }

    // Toolbar strip below the titlebar.
    Container [bg=#2b2b2bff,
               border_width=1, border_color=#ffffff1a] {
        Toolbar
    }
}
