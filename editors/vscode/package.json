{
  "name": "marduk-mkml",
  "displayName": "Marduk Markup Language (.mkml)",
  "description": "Language support for .mkml files â€” the declarative UI language for the Marduk GPU-accelerated UI framework. Provides syntax highlighting and full LSP integration (diagnostics, completions, hover docs).",
  "version": "1.0.0",
  "publisher": "marduk",
  "license": "MIT",
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Programming Languages"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mkml",
        "aliases": ["Marduk Markup Language", "mkml"],
        "extensions": [".mkml"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/mkml.svg",
          "dark":  "./icons/mkml.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mkml",
        "scopeName": "source.mkml",
        "path": "./syntaxes/mkml.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch":   "tsc -p . --watch",
    "package": "npm run compile && vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node":   "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce":  "^3.0.0",
    "typescript":    "^5.0.0"
  }
}
